                        <td class="number">@t.KillsPerBattle.ToString("N2")</td>
                        <td class="number-integer">@t.MaxFrags.ToString("N0")</td>
                        @Helpers.WN8Td(t.Wn8)
                    </tr>
                }
            </tbody>
